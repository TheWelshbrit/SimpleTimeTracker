@{
    ViewData["Title"] = "Timesheet App";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Timesheet Tracker</title>
</head>
<body>
    <h1>Timesheet Entry</h1>

    <!-- Display error message if present -->
    @if (TempData["Error"] != null)
    {
        <div style="color: red;">
            @TempData["Error"]
        </div>
    }

    <!-- Add Entry Form -->
    <form method="post" action="/Home/AddEntry">
        <label for="userName">User Name:</label>
        <input type="text" id="userName" name="userName" required>
        <br>

        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="@DateTime.Now.Year" required>
        <br>

        <label for="month">Month:</label>
        <input type="number" id="month" name="month" value="@DateTime.Now.Month" min="1" max="12" required>
        <br>

        <label for="day">Day:</label>
        <input type="number" id="day" name="day" value="@DateTime.Now.Day" min="1" max="31" required>
        <br>

        <label for="project">Project:</label>
        <input type="text" id="project" name="project" required>
        <br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <br>

        <label for="hoursWorked">Hours Worked:</label>
        <input type="number" id="hoursWorked" name="hoursWorked" min="0.01" max="24" step="0.01" required>
        <br>

        <button type="submit">Add Entry</button>
    </form>

    <!-- CSV Download -->
    <form method="get" action="/Home/GetCsv">
        <button type="submit">Download Timesheet as CSV</button>
    </form>
</body>
</html>